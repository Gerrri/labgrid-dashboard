# Labgrid Dashboard Frontend - Environment Variables Example
# Copy this file to .env and adjust values as needed

# API URL for the backend server
# - For Docker deployment: http://backend:8000
# - For non-Docker deployment: http://your-backend-host:8000
# - For local development: http://localhost:8000 (default)
VITE_API_URL=http://localhost:8000

# WebSocket URL for real-time updates
# - For Docker deployment: ws://backend:8000/api/ws
# - For non-Docker deployment: ws://your-backend-host:8000/api/ws
# - For local development: ws://localhost:8000/api/ws (default)
VITE_WS_URL=ws://localhost:8000/api/ws

# Set to 'true' to use mock data instead of real backend
VITE_USE_MOCK=false
