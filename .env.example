# Labgrid Dashboard - Environment Variables Example
# Copy this file to .env and adjust values as needed

# ============================================================================
# Backend Configuration
# ============================================================================

# Labgrid Coordinator URL
# - For Docker deployment: ws://coordinator:20408/ws
# - For non-Docker deployment: ws://your-coordinator-host:20408/ws
# - For local development: ws://localhost:20408/ws (default)
COORDINATOR_URL=ws://localhost:20408/ws

# Coordinator realm (typically "realm1")
COORDINATOR_REALM=realm1

# Coordinator connection timeout in seconds
COORDINATOR_TIMEOUT=30

# Commands configuration file path
COMMANDS_FILE=commands.yaml

# Debug mode (set to true for development)
DEBUG=false

# CORS origins (comma-separated list)
# - For Docker deployment: http://frontend:3000,http://localhost:3000
# - For production: https://your-dashboard.example.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# Frontend Configuration (set in frontend/.env)
# ============================================================================

# API URL for the backend server
# - For Docker deployment: http://backend:8000
# - For non-Docker deployment: http://your-backend-host:8000
# - For local development: http://localhost:8000 (default)
VITE_API_URL=http://localhost:8000

# WebSocket URL for real-time updates
# - For Docker deployment: ws://backend:8000/api/ws
# - For non-Docker deployment: ws://your-backend-host:8000/api/ws
# - For local development: ws://localhost:8000/api/ws (default)
VITE_WS_URL=ws://localhost:8000/api/ws

# ============================================================================
# Docker-specific overrides (used in docker-compose.yml)
# ============================================================================

# When running with Docker Compose, set these in .env or docker-compose.yml:
# COORDINATOR_URL=ws://coordinator:20408/ws
# VITE_API_URL=http://backend:8000
# VITE_WS_URL=ws://backend:8000/api/ws
